<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:background="@color/colorMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:id="@+id/Austria"
                android:layout_margin="10sp"
                android:orientation="vertical"
                android:background="@color/bloody"
                android:layout_width="200sp"
                android:layout_height="100sp">
            <LinearLayout
                    android:layout_marginTop="33sp"
                    android:layout_marginBottom="33sp"
                    android:background="@color/light"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/Poland"
                android:background="@color/tomato"
                android:layout_margin="10sp"
                android:layout_width="200sp"
                android:layout_height="100sp">
            <LinearLayout
                    android:background="@color/light"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"/>
        </RelativeLayout>

        <LinearLayout
                android:id="@+id/Italy"
                android:orientation="horizontal"
                android:background="@color/tomato"
                android:layout_margin="10sp"
                android:layout_width="200sp"
                android:layout_height="100sp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:background="@color/grass"
                    android:layout_width="66sp"
                    android:layout_height="match_parent"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:background="@color/light"
                    android:layout_width="65sp"
                    android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/Colombia"
                android:layout_margin="10sp"
                android:gravity="bottom"
                android:background="@color/sunflower"
                android:orientation="vertical"
                android:layout_width="200sp"
                android:layout_height="100sp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:background="@color/sea"
                    android:layout_height="25sp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:background="@color/bloody"
                    android:layout_width="match_parent"
                    android:layout_height="25sp"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/Madagascar"
                android:layout_margin="10sp"
                android:background="@color/light"
                android:gravity="end"
                android:layout_width="200sp"
                android:layout_height="100sp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="132sp"
                    android:background="@color/carrot"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:orientation="horizontal"
                        android:background="@color/grass"
                        android:layout_width="132sp"
                        android:layout_height="50sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/Thailand"
                android:layout_margin="10sp"
                android:background="@color/bloody"
                android:gravity="center"
                android:layout_width="200sp"
                android:layout_height="100sp">
            <LinearLayout
                    android:background="@color/light"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="66sp">
                <LinearLayout
                        android:background="@color/sea"
                        android:layout_width="match_parent"
                        android:layout_height="33sp"/>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
                android:id="@+id/Denmark"
                android:layout_margin="10sp"
                android:background="@color/raspberries"
                android:gravity="center"
                android:layout_width="200sp"
                android:layout_height="100sp">
            <LinearLayout
                    android:layout_marginStart="65sp"
                    android:background="@color/light"
                    android:layout_width="17sp"
                    android:layout_height="match_parent"/>
            <LinearLayout
                    android:layout_marginTop="44sp"
                    android:background="@color/light"
                    android:layout_width="match_parent"
                    android:layout_height="17sp"/>
        </FrameLayout>

    </LinearLayout>
</ScrollView>